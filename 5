using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp10
{
    enum DaysOfWeek
    {
        Monday, Tuesday, Wednesday, Thursday, Friday, Saturday, Sunday
    }
    class WeekendChecker
    {
        public static bool IsWeekend(DaysOfWeek day)
        {
            return day == DaysOfWeek.Saturday || day == DaysOfWeek.Sunday;
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 82
    enum Status
    {
        None = 0,
        Pending = 1,
        Active = 2,
        Completed = 3
    }

    // –ó–∞–¥–∞–Ω–∏–µ 83
    [Flags]
    enum FilePermissions
    {
        None = 0,
        Read = 1,
        Write = 2,
        Execute = 4,
        All = Read | Write | Execute
    }

    // –ó–∞–¥–∞–Ω–∏–µ 84
    class EnumConverter
    {
        public static string ToString(Status status) => status.ToString();
        public static Status FromString(string str) => (Status)Enum.Parse(typeof(Status), str);
    }

    // –ó–∞–¥–∞–Ω–∏–µ 85
    enum Priority
    {
        [Description("–ù–∏–∑–∫–∏–π –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç")]
        Low,
        [Description("–°—Ä–µ–¥–Ω–∏–π –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç")]
        Medium,
        [Description("–í—ã—Å–æ–∫–∏–π –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç")]
        High
    }

    // –ó–∞–¥–∞–Ω–∏–µ 86
    static class EnumExtensions
    {
        public static IEnumerable<T> GetValues<T>() where T : Enum
        {
            return Enum.GetValues(typeof(T)).Cast<T>();
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 87
    class EnumValidator
    {
        public static bool IsValid<T>(int value) where T : Enum
        {
            return Enum.IsDefined(typeof(T), value);
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 88
    enum OrderStatus
    {
        Draft, Submitted, Processing, Shipped, Delivered
    }
    class OrderStatusHelper
    {
        public static bool CanTransition(OrderStatus from, OrderStatus to)
        {
            return (int)to == (int)from + 1;
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 89
    class EnumParser
    {
        public static T Parse<T>(string value) where T : struct
        {
            return (T)Enum.Parse(typeof(T), value);
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 90
    enum CompactStatus : byte
    {
        Inactive = 0,
        Active = 1
    }

    // –ó–∞–¥–∞–Ω–∏–µ 91
    class EnumCyclic
    {
        public static T GetNext<T>(T current) where T : Enum
        {
            var values = Enum.GetValues(typeof(T)).Cast<T>().ToArray();
            int index = Array.IndexOf(values, current);
            return values[(index + 1) % values.Length];
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 92
    enum Color
    {
        Red, Green, Blue
    }
    class ColorHelper
    {
        public static (int r, int g, int b) GetRGB(Color color)
        {
            if (color == Color.Red) return (255, 0, 0);
            if (color == Color.Green) return (0, 255, 0);
            if (color == Color.Blue) return (0, 0, 255);
            return (0, 0, 0);
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 93
    [Flags]
    enum UserRoles
    {
        None = 0,
        Guest = 1,
        User = 2,
        Moderator = 4,
        Admin = 8
    }

    // –ó–∞–¥–∞–Ω–∏–µ 94
    class FlagCounter
    {
        public static int CountFlags(FilePermissions permissions)
        {
            int count = 0;
            if (permissions.HasFlag(FilePermissions.Read)) count++;
            if (permissions.HasFlag(FilePermissions.Write)) count++;
            if (permissions.HasFlag(FilePermissions.Execute)) count++;
            return count;
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 95
    class PriorityComparer
    {
        public static int Compare(Priority p1, Priority p2)
        {
            return ((int)p1).CompareTo((int)p2);
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 96
    class EnumLocalizer
    {
        public static string GetLocalizedName(Status status)
        {
            if (status == Status.None) return "–ù–µ—Ç";
            if (status == Status.Pending) return "–í –æ–∂–∏–¥–∞–Ω–∏–∏";
            if (status == Status.Active) return "–ê–∫—Ç–∏–≤–Ω—ã–π";
            if (status == Status.Completed) return "–ó–∞–≤–µ—Ä—à–µ–Ω";
            return status.ToString();
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 97
    class EnumIcon
    {
        public static string GetIcon(Priority priority)
        {
            if (priority == Priority.Low) return "üü¢";
            if (priority == Priority.Medium) return "üü°";
            if (priority == Priority.High) return "üî¥";
            return "‚ö™";
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 98
    enum State
    {
        Idle, Running, Paused, Stopped
    }
    class StateMachine
    {
        public State CurrentState { get; private set; } = State.Idle;
        public void Transition(State newState)
        {
            CurrentState = newState;
            Console.WriteLine($"–ü–µ—Ä–µ—Ö–æ–¥ –≤ —Å–æ—Å—Ç–æ—è–Ω–∏–µ: {newState}");
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 99
    class FlagCombinations
    {
        public static List<FilePermissions> GetCombinations()
        {
            List<FilePermissions> result = new List<FilePermissions>();
            result.Add(FilePermissions.None);
            result.Add(FilePermissions.Read);
            result.Add(FilePermissions.Write);
            result.Add(FilePermissions.Read | FilePermissions.Write);
            return result;
        }
    }

    // –ó–∞–¥–∞–Ω–∏–µ 100
    static class EnumValidationExtensions
    {
        public static bool IsValidTransition(this OrderStatus from, OrderStatus to)
        {
            return (int)to >= (int)from;
        }
    }

    internal class Program
    {
        static void Main(string[] args)
        {
            // –ó–∞–¥–∞–Ω–∏–µ 81
            bool weekend = WeekendChecker.IsWeekend(DaysOfWeek.Saturday);
            Console.WriteLine($"81. –°—É–±–±–æ—Ç–∞ - –≤—ã—Ö–æ–¥–Ω–æ–π: {weekend}");

            // –ó–∞–¥–∞–Ω–∏–µ 82
            Status st = Status.Active;
            Console.WriteLine($"82. –°—Ç–∞—Ç—É—Å: {st}, –ó–Ω–∞—á–µ–Ω–∏–µ: {(int)st}");

            // –ó–∞–¥–∞–Ω–∏–µ 83
            FilePermissions perms = FilePermissions.Read | FilePermissions.Write;
            Console.WriteLine($"83. –ü—Ä–∞–≤–∞: {perms}");

            // –ó–∞–¥–∞–Ω–∏–µ 84
            string statusStr = EnumConverter.ToString(Status.Pending);
            Status parsedStatus = EnumConverter.FromString("Active");
            Console.WriteLine($"84. –ö–æ–Ω–≤–µ—Ä—Ç–∞—Ü–∏—è: {statusStr} -> {parsedStatus}");

            // –ó–∞–¥–∞–Ω–∏–µ 85
            Priority priority = Priority.High;
            Console.WriteLine($"85. –ü—Ä–∏–æ—Ä–∏—Ç–µ—Ç: {priority}");

            // –ó–∞–¥–∞–Ω–∏–µ 86
            var values = EnumExtensions.GetValues<Status>();
            Console.WriteLine($"86. –ó–Ω–∞—á–µ–Ω–∏–π –≤ Status: {values.Count()}");

            // –ó–∞–¥–∞–Ω–∏–µ 87
            bool valid = EnumValidator.IsValid<Status>(2);
            Console.WriteLine($"87. –ó–Ω–∞—á–µ–Ω–∏–µ 2 –≤–∞–ª–∏–¥–Ω–æ –¥–ª—è Status: {valid}");

            // –ó–∞–¥–∞–Ω–∏–µ 88
            bool canTransition = OrderStatusHelper.CanTransition(OrderStatus.Draft, OrderStatus.Submitted);
            Console.WriteLine($"88. –ú–æ–∂–Ω–æ –ø–µ—Ä–µ–π—Ç–∏: {canTransition}");

            // –ó–∞–¥–∞–Ω–∏–µ 89
            Status parsedEnum = EnumParser.Parse<Status>("Active");
            Console.WriteLine($"89. –†–∞—Å–ø–æ–∑–Ω–∞–Ω: {parsedEnum}");

            // –ó–∞–¥–∞–Ω–∏–µ 90
            CompactStatus compact = CompactStatus.Active;
            Console.WriteLine($"90. –ö–æ–º–ø–∞–∫—Ç–Ω—ã–π enum: {compact} (byte)");

            // –ó–∞–¥–∞–Ω–∏–µ 91
            DaysOfWeek today = DaysOfWeek.Monday;
            DaysOfWeek tomorrow = EnumCyclic.GetNext(today);
            Console.WriteLine($"91. –°–ª–µ–¥—É—é—â–∏–π –¥–µ–Ω—å: {tomorrow}");

            // –ó–∞–¥–∞–Ω–∏–µ 92
            var rgb = ColorHelper.GetRGB(Color.Red);
            Console.WriteLine($"92. RGB –∫—Ä–∞—Å–Ω–æ–≥–æ: ({rgb.r}, {rgb.g}, {rgb.b})");

            // –ó–∞–¥–∞–Ω–∏–µ 93
            UserRoles roles = UserRoles.User | UserRoles.Moderator;
            Console.WriteLine($"93. –†–æ–ª–∏: {roles}");

            // –ó–∞–¥–∞–Ω–∏–µ 94
            FilePermissions fp = FilePermissions.Read | FilePermissions.Write;
            int flagCount = FlagCounter.CountFlags(fp);
            Console.WriteLine($"94. –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —É—Å—Ç–∞–Ω–æ–≤–ª–µ–Ω–Ω—ã—Ö —Ñ–ª–∞–≥–æ–≤: {flagCount}");

            // –ó–∞–¥–∞–Ω–∏–µ 95
            int comparison = PriorityComparer.Compare(Priority.Low, Priority.High);
            Console.WriteLine($"95. –°—Ä–∞–≤–Ω–µ–Ω–∏–µ –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç–æ–≤: {comparison}");

            // –ó–∞–¥–∞–Ω–∏–µ 96
            string localized = EnumLocalizer.GetLocalizedName(Status.Pending);
            Console.WriteLine($"96. –õ–æ–∫–∞–ª–∏–∑–æ–≤–∞–Ω–Ω–æ–µ –∏–º—è: {localized}");

            // –ó–∞–¥–∞–Ω–∏–µ 97
            string icon = EnumIcon.GetIcon(Priority.High);
            Console.WriteLine($"97. –ò–∫–æ–Ω–∫–∞ –≤—ã—Å–æ–∫–æ–≥–æ –ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç–∞: {icon}");

            // –ó–∞–¥–∞–Ω–∏–µ 98
            StateMachine sm = new StateMachine();
            sm.Transition(State.Running);
            sm.Transition(State.Paused);

            // –ó–∞–¥–∞–Ω–∏–µ 99
            var combinations = FlagCombinations.GetCombinations();
            Console.WriteLine("99. –ö–æ–º–±–∏–Ω–∞—Ü–∏–∏ —Ñ–ª–∞–≥–æ–≤:");
            foreach (var combo in combinations.Take(5))
                Console.WriteLine($"  {combo}");

            // –ó–∞–¥–∞–Ω–∏–µ 100
            OrderStatus fromStatus = OrderStatus.Draft;
            OrderStatus toStatus = OrderStatus.Shipped;
            bool validTransition = fromStatus.IsValidTransition(toStatus);
            Console.WriteLine($"100. –ü–µ—Ä–µ—Ö–æ–¥ {fromStatus} -> {toStatus} –≤–∞–ª–∏–¥–µ–Ω: {validTransition}");
        }
    }
}
